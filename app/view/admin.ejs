<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Administration - Liste des utilisateurs</title>
</head>
<body>
    <h1>Gestion des utilisateurs</h1>

    <!-- Formulaire de recherche -->
    <input type="text" id="search-email" placeholder="Rechercher par email">
    <button onclick="searchUsers()" id="searchButton">Rechercher</button>

    <h2>Liste des utilisateurs</h2>
    <ul id="user-list">
        <% for(const user of users) { %>
            <li>Email : <%= user.email %> Role : <%= user.role %></li>
        <% } %>
    </ul>
    
    <script>
      document.getElementById("search-email").value = "<%= search || ''%>";

document
  .getElementById("search-email")
  .addEventListener("keypress", function (event) {
    if (event.key === "Enter") {
      document.location.href = `/user/admin?search=${
        document.getElementById("search-email").value
      }`;
    }
  });

document
  .getElementById("searchButton")
  .addEventListener("click", function () {
    document.location.href = `/user/admin?search=${
      document.getElementById("search-email").value
    }`;
  });
</script>
</body>
</html>
